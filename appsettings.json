{
  "$schema": "https://steeltoe.io/schema/latest/schema.json",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Steeltoe": "Debug",
      "WeatherForecastServer": "Information",
      "MonitorRabbitMQ": "Warning"
    }
  },
  "Rabbitmq": {
    "Client": {
      "Uri": "amqp://admin:admin@172.18.255.200/weather"
    }
  },
  "spring": {
    "cloud": {
      "stream": {
        "binder": "rabbit",
        "bindings": {
          "input": {
            "destination": "weather",
            "group": "forecast",
            "consumer": {
              "quorum": {
                "enabled": true
              }
            }
          },
          "output": {
            "destination": "weather",
            "group": "forecast",
            "producer": {
              "quorum": {
                "enabled": true
              }
            }
          }
        }
      }
    }
  }
}
